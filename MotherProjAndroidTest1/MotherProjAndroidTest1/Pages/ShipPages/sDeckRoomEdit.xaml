<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Pages.ShipPages.sDeckRoomEdit">
    <ContentPage.Content>
        <StackLayout>
            <Grid MinimumHeightRequest="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.8*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="0" Text="Наз." Clicked="buttonBackClick" HorizontalOptions="Fill" VerticalOptions="Fill" />
                <Label Grid.Column="1" Padding="10, 0, 0, 0" Background="CadetBlue" VerticalTextAlignment="Center" x:Name="_labelHead" TextColor="White" FontAttributes="Bold" Text="Каюта" />
            </Grid>
            <Grid>
                <Label Grid.Column="0" Grid.Row="0" Text="id:" x:Name="_labelId" />
                <Label Grid.Column="0" Grid.Row="1" Text="Наименование:" />
                <Entry Grid.Column="1" Grid.Row="1" x:Name="_entryRoomName"  />
            </Grid>
            <StackLayout>
                <Button Text="Сохранить" Clicked="buttonSaveClick" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>